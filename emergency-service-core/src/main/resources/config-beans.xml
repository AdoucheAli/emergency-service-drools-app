<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:drools="http://drools.org/schema/drools-spring"       
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
   
    
    
    <bean id="environmentConf" class="com.wordpress.salaboy.model.serviceclient.EnvironmentConfiguration">
        <constructor-arg>
            <map>
                <entry>
                    <key>
                        <value>PersistenceService</value>
                    </key>
                    <value>PersistenceServiceType.DISTRIBUTED_MAP</value>
                </entry>
                <entry>
                    <key>
                        <value>ContextTrackingService</value>
                    </key>
                    <value>ContextTrackingServiceType.REST</value>
                </entry>
            </map>
        </constructor-arg>
    </bean>
    
   
</beans>                              
